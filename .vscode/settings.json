    "cSpell.words": [
        "BKAV",
        "getrevenuebycategories",
        "getrevenuebycurrencies",
        "getrevenuebydiscounts",
        "HILO",
        "Immer",
        "Keycloack",
        "mainmenu",
        "masterdata",
        "MINVOICE",
        "Multiaxis",
        "nopaging",
        "posmasterdata",
        "Productincategory",
        "revenuebycategories",
        "revenuebydays",
        "revenuebyhours",
        "skyoffice",
        "treenode",
        "TSAPP",
        "TSWEB",
        "vouchersandcoupons",
        "zustand"
    ],
    "tailwindCSS.experimental.classRegex": [
        [":\\s*?[\"'`]([^\"'`]*).*?,"],
        ["clsx\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"],
        ["cn\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"],
        ["cva\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"],
        ["cx\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"],
        "tw`([^`]*)", // tw`...`
        "tw=\"([^\"]*)", // <div tw="..." />
        "tw={\"([^\"}]*)", // <div tw={"..."} />
        "tw\\.\\w+`([^`]*)", // tw.xxx`...`
        "tw\\(.*?\\)`([^`]*)" // tw(Component)`...`
    ],
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": "explicit"
    },
    "files.eol": "\n",
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/.idea": true
    },
    "[xml]": {
        "editor.defaultFormatter": "redhat.vscode-xml"
    },
    "markdown.preview.scrollEditorWithPreview": true,
    "[typescriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "i18n-ally.localesPaths": ["public/locales", "src/libs/i18n"]
}
